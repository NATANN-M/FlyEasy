<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/tools"
    android:id="@+id/cardUpcomingBooking"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:visibility="gone"
    card_view:cardElevation="2dp"
    card_view:cardCornerRadius="0dp"
    card_view:cardBackgroundColor="@android:color/white"
    android:background="@android:color/white">

<LinearLayout
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:orientation="vertical"
android:padding="24dp"
android:background="@android:color/white">

<!-- Title -->
<TextView
    android:id="@+id/tvUpcomingTitle"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Your Upcoming Flight"
    android:textSize="18sp"
    android:textStyle="bold"
    android:textColor="#1A1A1A"
    android:fontFamily="sans-serif-medium"
    android:layout_marginBottom="12dp" />

<!-- Horizontal divider -->
<View
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:background="#F1F1F1"
    android:layout_marginBottom="16dp"/>

<!-- Booking Details -->
<TextView
    android:id="@+id/tvBookingDetails"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Flight details here..."
    android:textSize="14sp"
    android:textColor="#050505"
    android:lineSpacingExtra="4dp"
    android:layout_marginBottom="24dp" />

<!-- View Ticket Button -->
<com.google.android.material.button.MaterialButton
    android:id="@+id/btnViewTicket"
    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
    android:layout_width="wrap_content"
    android:layout_height="40dp"
    android:text="View Ticket"
    android:textColor="#2196F3"
    android:textSize="14sp"
    android:textStyle="bold"
    app:strokeColor="#2196F3"

    app:rippleColor="#E3F2FD"
    android:paddingStart="24dp"
    android:paddingEnd="24dp"/>
</LinearLayout>
    </androidx.cardview.widget.CardView>